{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "noEmitOnError": true,
    "noResolve": false,
    "experimentalDecorators": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "./src/",
    "outDir": "./lib/",
    "allowUnusedLabels": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "declaration": true
  },
  "compileOnSave": false,
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "src/**/*.spec.ts"
  ]
}